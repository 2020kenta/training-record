<h1>管理者ページ</h1>

<h2>ユーザー検索</h2>
<form action="/users/search" method="get" id="searchUsers">
    <div class="contents">
        <div class="item">Group</div>
        <div class="itemv">
            <select v-model="select">
                <option hidden>選択してください</option>
                <option>Admin</option>
                <option>HONDA</option>
                <option>Peach01</option>
                <option>ANA01</option>
            </select>
        </div>
    </div>
    <div class="contents">
        <div class="item">氏名</div>
        <div class="itemv">
            <select name="trainee">
                <option value="" hidden>選択してください</option>
                <% users.forEach(user => { %>
                        <option value="<%= user._id %>" v-if="select==='<%= user.group %>'"><%= user.fullName() %></option>
                <% }) %>
            </select>
        </div>
    </div>
    <button type="submit">検索</button>
</form>
<div>
    <a href="/users">全ユーザー一覧</a>
</div>
<div>
    <a href="/users/create">新規ユーザー作成</a>
</div>

<script src="https://unpkg.com/vue@next"></script>
<script>
    const SearchUsers = {
        data() {
            return {
                select: "選択してください",
            }
        }
    };
    Vue.createApp(SearchUsers).mount("#searchUsers");
</script>
