<h1>Training Record Register</h1>
<form action="/register" method="POST">
    <input type="hidden" name="id" value="<%= trainee_id %>">
    <div class="contents">
        <div class="item">ID</div>
        <div class="itemv"><%= trainee_id %></div>
    </div>
    <input type="hidden" name="phase" value="<%= phase %>">
    <div class="contents">
        <div class="item">課程</div>
        <div class="itemv"><%= phase %></div>
    </div>
    <div class="contents">
        <div class="item">Record No.</div>
        <div class="itemv">
            <input type="hidden" name="rec_id" value="<%= rec_id %>">
            <%= rec_id %>
        </div>
    </div>
    <div class="contents">
        <div class="item">DATE</div>
        <div class="itemv">
            <input type="date" name="date" required>
        </div>
    </div>
    <div class="contents">
        <div class="item">INST ID</div>
        <div class="itemv">
            <input type="text" name="inst_id" required>
        </div>
    </div>
    <div class="contents">
        <div class="item">総合評価</div>
        <div class="itemv">
            <input type="number" name="g_grade" min="1" max="3" required>
        </div>
    </div>
    <div class="contents">
        <div class="item">操作技術</div>
        <div class="itemv">
            <input type="number" name="technical" min="1" max="3" required>
        </div>
        <div class="itemvl">
            <textarea name="t_comment"  cols="50" rows="2"></textarea>
        </div>
    </div>
    <div class="contents">
        <div class="item">知識</div>
        <div class="itemv">
            <input type="number" name="knowledge" min="1" max="3" required>
        </div>
        <div class="itemvl">
            <textarea name="k_comment"  cols="50" rows="2"></textarea>
        </div>
    </div>
    <div class="contents">
        <div class="item">CRM</div>
        <div class="itemv">
            <input type="number" name="crm" min="1" max="3" required>
        </div>
        <div class="itemvl">
            <textarea name="c_comment"  cols="50" rows="2"></textarea>
        </div>
    </div>
    <button type="submit">登録</button>
</form>