<h1>Training Record 新規作成</h1>
<form action="/record/<%= trainee._id %>/create" method="POST">
    <div class="contents">
        <div class="item">Trainee</div>
        <div class="itemv">
            <input type="hidden" name="trainee_id" value="<%= trainee._id %>">
            <%= trainee.fullName() %>
        </div>
    </div>
    <div class="contents">
        <div class="item">Instructor</div>
        <div class="itemv">
            <% if(currentUser.group === "Admin"){ %>
            <input type="text" name="inst_id" pattern="[0-9]{4}" required>
            <% } else { %>
            <input type="hidden" name="inst_id" value="<%= currentUser.id %>">
            <%= currentUser.fullName() %>
            <% } %>
        </div>
    </div>
    <div class="contents">
        <div class="item">課程</div>
        <div class="itemv">
            <select name="phase">
                <option value="CP1">CP1</option>
                <option value="CP2">CP2</option>
                <option value="INST1">INST1</option>
            </select>
        </div>
    </div>
    <div class="contents">
        <div class="item">DATE</div>
        <div class="itemv">
            <input type="date" name="date" id="date" required>
        </div>
    </div>
    <div class="contents">
        <div class="item">総合評価</div>
        <div class="itemv">
            <input type="number" name="g_grade" min="1" max="3" required>
        </div>
    </div>
    <div class="contents">
        <div class="item">操作技術</div>
        <div class="itemv">
            <input type="number" name="technical" min="1" max="3" required>
        </div>
        <div class="itemvl">
            <textarea name="t_comment"  cols="50" rows="2"></textarea>
        </div>
    </div>
    <div class="contents">
        <div class="item">知識</div>
        <div class="itemv">
            <input type="number" name="knowledge" min="1" max="3" value="2" required>
        </div>
        <div class="itemvl">
            <textarea name="k_comment"  cols="50" rows="2"></textarea>
        </div>
    </div>
    <div class="contents">
        <div class="item">CRM</div>
        <div class="itemv">
            <input type="number" name="crm" min="1" max="3" required>
        </div>
        <div class="itemvl">
            <textarea name="c_comment"  cols="50" rows="2"></textarea>
        </div>
    </div>
    <button type="submit" name="edit" value="true">一時保存</button>
    <button type="submit" name="edit">確定</button>
</form>
<script>
    //日付入力の初期値を今日に
    const date = new Date();
    const year = date.getFullYear();
    const month = ("0" + (date.getMonth() + 1)).slice(-2);
    const day = ("0" + date.getDate()).slice(-2);
    document.getElementById("date").value = year + "-" + month + "-" + day;
</script>